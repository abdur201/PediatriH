@model web.Models.AcilModel

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Acil Kayıt Düzenle</h2>

<form asp-action="Edit" method="post">
 

    <div class="form-group">
        <label for="AcilId">Acil ID</label>
        <input type="text" class="form-control" id="AcilId" name="AcilId" value="@Model.AcilId" readonly />
    </div>

    <div class="form-group">
        <label for="DateTime">Tarih/Zaman</label>
        <input type="datetime-local" class="form-control" id="DateTime" name="DateTime" value="@Model.DateTime.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="form-group">
        <label for="BolumId">Bölüm ID</label>
        <input type="number" class="form-control" id="BolumId" name="BolumId" value="@Model.BolumId" required />
    </div>

    <div class="form-group">
        <label for="Info">Bilgi</label>
        <input type="text" class="form-control" id="Info" name="Info" value="@Model.Info" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

<a href="@Url.Action("Index", "Acil")" class="btn btn-secondary">İptal</a>
