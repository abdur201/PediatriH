@model web.Models.NobetModel

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Nobet Kayıdını Düzenle</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="NobetId">Nobet ID</label>
        <input type="text" class="form-control" id="NobetId" name="NobetId" value="@Model.NobetId" readonly />
    </div>

    <div class="form-group">
        <label for="BolumId">Bölüm ID</label>
        <input type="number" class="form-control" id="BolumId" name="BolumId" value="@Model.BolumId" required />
    </div>

    <div class="form-group">
        <label for="AsistanId">Asistan ID</label>
        <input type="number" class="form-control" id="AsistanId" name="AsistanId" value="@Model.AsistanId" required />
    </div>

    <div class="form-group">
        <label for="NobetBas">Nobet Başlangıç</label>
        <input type="datetime-local" class="form-control" id="NobetBas" name="NobetBas" value="@Model.NobetBas.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="form-group">
        <label for="NobetBit">Nobet Bitiş</label>
        <input type="datetime-local" class="form-control" id="NobetBit" name="NobetBit" value="@Model.NobetBit.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

<a href="@Url.Action("Index", "Nobet")" class="btn btn-secondary">İptal</a>
